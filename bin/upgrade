#!/usr/bin/env bash

echo "== Upgrade Starting =="

echo ""
echo "== Running pnpm Upgrade =="
pnpm upgrade --latest

echo ""
echo "== Running Update for Documentation =="
cd documentation
pnpm upgrade --latest

echo ""
echo "== Running Update for Playground =="
cd playground
bundle update
pnpm upgrade --latest

echo ""
echo "== Upgrade Finished =="
